{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "removeComments": false,
        "declaration": true,
        "newLine": "LF",
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "lib": [
            "es6"
        ],
        "types": [
            "node",
            "mocha",
            "nexpect",
            "mkdirp",
            "rimraf",
            "js-yaml"
        ]
    },
    "include": [
        "lib/**/*.ts",
        "types/*.d.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "test/fixtures/*"
    ]
}