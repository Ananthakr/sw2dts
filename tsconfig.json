{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "removeComments": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "declaration": true,
        "inlineSources": true,
        "newLine": "LF",
        "noEmitOnError": true
    },
    "filesGlob": [
        "lib/**/*.ts",
        "test/**/*.ts",
        "!lib/**/*.d.ts",
        "!test/**/*.d.ts",
        "typings/**/*.ts",
        "node_modules/typescript/lib/lib.es6.d.ts",
        "lib/types/*.d.ts",
        "!test/fixtures/*"
    ],
    "files": [
        "lib/cli.ts",
        "lib/converter.ts",
        "test/cli.spec.ts",
        "test/converter.spec.ts",
        "typings/bundle.d.ts",
        "typings/js-yaml/js-yaml.d.ts",
        "typings/mkdirp/mkdirp.d.ts",
        "typings/mocha/mocha.d.ts",
        "typings/nexpect/nexpect.d.ts",
        "typings/node/node.d.ts",
        "typings/rimraf/rimraf.d.ts",
        "node_modules/typescript/lib/lib.es6.d.ts",
        "lib/types/dtsgenerator.d.ts",
        "lib/types/swagger.d.ts"
    ]
}