{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2018",
        "strict": true,
        "removeComments": false,
        "declaration": true,
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "lib": [
            "ES2018"
        ]
    },
    "include": [
        "lib/**/*.ts",
        "types/*.d.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "test/fixtures/*"
    ]
}